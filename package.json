{
  "name": "@oxog/nmc",
  "version": "1.0.0",
  "description": "Zero-dependency Node.js tool for finding, analyzing, and cleaning node_modules directories",
  "main": "dist/index.js",
  "bin": {
    "nmc": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:web": "node scripts/build-web.js",
    "dev": "tsx src/cli/index.ts",
    "dev:web": "node scripts/dev-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "package": "node scripts/package.js",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "node_modules",
    "cleaner",
    "disk-space",
    "zero-dependency",
    "cli",
    "typescript"
  ],
  "author": "Ersin Koc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/NodeModulesCleaner"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "prettier": "^3.1.1"
  }
}